generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  email     String   @unique
  avatar    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lesson {
  id       Int    @id @default(autoincrement())
  name     String 
  title    String
  src      String
  level    String
  category String
  priority Int
}
